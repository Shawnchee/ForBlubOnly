<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="#4C9A2A" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Content -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#4C9A2A" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>